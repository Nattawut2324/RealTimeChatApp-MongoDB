<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Monitor</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color: #222; color: #ccc;">
    <div class="container">
        <h4>Mongo DB chat-db API performance</h4>
        <table class="table mt-5 table-dark table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Function</th>
                    <th scope="col">Connections</th>
                    <th scope="col">Duration</th>
                    <th scope="col">Request per second</th>
                    <th scope="col">Byte per second</th>
                    <th scope="col">Byte per request</th>
                    <th scope="col">Latency</th>
                    <th scope="col">Total Request</th>
                    <th scope="col">Total Byte</th>
                </tr>
            </thead>
            <tbody class="text-end">
                <% for(const [key,value] of Object.entries(locals.data)) { %>
                <tr>
                    <th class="text-start"><%= key %></th>
                    <td><%= value.connections %></td>
                    <td><%= value.duration %> s</td>
                    <td><%= value.req_per_sec.average %></td>
                    <td><%= value.KB_per_sec.average %></td>
                    <td><%= value.KB_per_req %></td>
                    <td><%= value.latency.average %> ms</td>
                    <td><%= value.totalRequest %></td>
                    <td><%= value.totalKB %></td>
                </tr>
                <% } %>
            </tbody>
        </table>
        <div>
            <div class="mt-5">
                <h5>Test Route</h5>
            </div>
            <div class="d-flex ">
                <label class="me-3" style="font-weight: bold; font-size: 20px;" for="">Route</label>
                <input class="me-3 form-control" type="text" name="route" style="width: 300px;" value="/">
                <button class="btn btn-success" type="submit">Run</button>
            </div>
        </div>
    </div>
</body>
</html>